{
	"manifest_version": 2,
	"name": "Rechlome",
	"version": "1.0",
	//	"default_locale": "en",
	"description": "Reclaim your Chrome!",
	"icons": { "128": "sword.icon.png" },
	"background": {
		"persistent": false,
		"scripts": ["bg.js"]
	},
	"permissions": ["http://*/*", "https://*/*"],
	"browser_action": {
		"default_title": "Reclaim Chrome",
		"default_icon": "sword.icon.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [{
		"matches": ["http://www.facebook.com/*"],
		//"css": ["mystyles.css"],
		"js": ["jquery.js", "fb.js"]
	}]
}
